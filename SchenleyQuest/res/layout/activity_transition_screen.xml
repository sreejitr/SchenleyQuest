<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TransitionScreen" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:contentDescription="@string/schenleyq_image"
        android:scaleType="centerCrop"
        android:src="@drawable/transition_back" />

    <ImageView
        android:id="@+id/imageView2"  
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:alpha="0.40"
        android:contentDescription="@string/schenleyq_image"
        android:src="@drawable/ribbons" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="240dp"
        android:layout_height="fill_parent"
        android:layout_above="@+id/button_Continue"
        android:layout_below="@+id/textView_win_msg"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/qsrel_bg"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <RelativeLayout
            android:id="@+id/firstRectangle"
            android:layout_width="fill_parent"
            android:layout_height="273dp"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/textView_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="@string/hello_world"
                android:textStyle="bold" />
            
            <TextView
                android:id="@+id/textViewdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView_option"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/hello_world"
                android:textSize="18sp" />

        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_Continue"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:background="@drawable/continue_button"
        android:onClick="nextQuestionClick" />

    <TextView
        android:id="@+id/textView_win_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/hello_world"
        android:textSize="25sp"
        android:textStyle="bold" />

    

</RelativeLayout>